{
  "name": "hardhat-javascript-starter",
  "scripts": {
    "compile": "npx hardhat compile",
    "build": "npx thirdweb@latest detect",
    "deploy": "npx thirdweb@latest deploynp",
    "release": "npx thirdweb@latest release",
    "build:contracts": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "test": "npm run build:contracts && jest test --detectOpenHandles",
    "start:node": "hardhat node",
    "stop:node": "kill-port 8545",
    "deploy:local": "sleep 5 && hardhat run scripts/deploy.ts --network localhost",
    "thirdweb:generate": "npx thirdweb generate",
    "init": "npm run stop:node & npm run start:node & npm run deploy:local",
    "checksize": "npm run build:contracts && npx ts-node scripts/checksize.ts",
    "deploy-primer-sepolia": "hardhat run scripts/deploy-primer-sepolia.ts --network mumbai",
    "deploy-sepolia": "hardhat run scripts/deploy-sepolia.ts --network sepolia",
    "deploy-sidechain-mumbai": "hardhat run scripts/deploy-side-polygon.ts --network mumbai"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@types/chai": "^4.3.4",
    "@types/jest": "^29.5.2",
    "chai": "^4.3.10",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "hardhat": "^2.10.1",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@chainlink/contracts-ccip": "^0.7.6",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomicfoundation/hardhat-verify": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.6",
    "@nomiclabs/hardhat-solhint": "^3.0.0",
    "@thirdweb-dev/contracts": "^3.8.3",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "antd": "^5.11.0",
    "dotenv": "^16.3.1",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
    "typechain": "^8.1.1"
  }
}
